<section class="cards-sec">
  <div class="o-container">
    <div class="content">
      <h2>{{ section.settings.title }}</h2>
      <p>{{ section.settings.sub_heading }}</p>
    </div>
    <div class="o-row">
      {% for block in section.blocks %}
        {% if block.type == 'top_block' %}
          <div class="o-col">
            <div class="o-card">
              <img src="{{ block.settings.top_image | img_url: 'master' }}" alt="" width="500" height="500">
              <h3>{{ block.settings.top_title }}</h3>
              <p>{{ block.settings.top_text_area }}</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    <div class="o-row">
      {% for block in section.blocks %}
        {% if block.type == 'bottom_block' %}
          <div class="o-col-1">
            <div class="o-card">
              <img src="{{ block.settings.bottom_image | img_url: 'master' }}" alt="" width="500" height="500">
              <h3>{{ block.settings.bottom_title }}</h3>
              <p>{{ block.settings.bottom_text_area }}</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Cards Section",
  "settings": [
    {
      "id": "title",
      "label": "Title",
      "type": "text"
    },
    {
      "id": "sub_heading",
      "label": "Paragraph",
      "type": "textarea"
    }
  ],
  "blocks": [
    {
      "name": "Top Block",
      "type": "top_block",
      "settings": [
        {
          "id": "top_image",
          "label": "Top Image",
          "type": "image_picker"
        },
        {
          "id": "top_title",
          "label": "Top Title",
          "type": "text"
        },
        {
          "id": "top_text_area",
          "label": "Top Content",
          "type": "textarea"
        }
      ]
    },
    {
      "name": "Bottom Block",
      "type": "bottom_block",
      "settings": [
        {
          "id": "bottom_image",
          "label": "Bottom Image",
          "type": "image_picker"
        },
        {
          "id": "bottom_title",
          "label": "Bottom Title",
          "type": "text"
        },
        {
          "id": "bottom_text_area",
          "label": "Bottom Content",
          "type": "textarea"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "My Cards Section",
      "category": "My Cards Section"
    }
  ]
}
{% endschema %}

{% style %}
  .o-container {
    max-width: 1200px;
    margin: 0 auto;
    padding-right: 15px;
    padding-left: 15px;
  }

  .o-row {
    margin-left: -15px;
    margin-right: -15px;
    display: flex;
    flex-wrap: wrap;
  }

  .o-col {
    flex: 0 0 33.33%;
    padding-right: 15px;
    padding-left: 15px;
  }
  .o-card img {
    width: 100%;
    height: 400px;
    object-fit: cover;
  }
  section.cards-sec h2 {
    font-size: calc(var(--font-heading-scale) * 3rem);
    text-align: center;
  }

  section.cards-sec p {
    text-align: center;
  }

  section.cards-sec .o-card h3 {
    font-size: 20px;
    line-height: 20px;
  }

  section.cards-sec .o-card p {
    text-align: justify;
  }
  .o-col-1 {
    flex: 0 0 50%;
    padding-right: 15px;
    padding-left: 15px;
}
{% endstyle %}
